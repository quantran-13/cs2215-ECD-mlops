{
  "index_patterns": "queue_metrics_*",
  "settings": {
    "number_of_replicas": 0,
    "number_of_shards": 1
  },
  "mappings": {
    "_source": {
      "enabled": true
    },
    "properties": {
      "timestamp": {
        "type": "date"
      },
      "queue": {
        "type": "keyword"
      },
      "average_waiting_time": {
        "type": "float"
      },
      "queue_length": {
        "type": "integer"
      },
      "company_id": {
        "type": "keyword"
      }
    }
  }
}